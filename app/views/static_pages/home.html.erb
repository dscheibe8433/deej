<div class="center jumbotron">
  <h1>Welcome to deej</h1>
  <% if logged_in? %>
    <section class="border">
        <%= button_to "View active DJ's", users_path, { :class => "buttonTo", :method => :get } %>
        <br>
        <%= button_to "Start sharing your own music!", current_user, { :class => "buttonTo", :method => :get } %>
    </section>
  <% else %>
  <h2>
    Please log in to begin listening to personalized DJ sets from all over!
  </h2>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>

