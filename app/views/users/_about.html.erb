<h3>About</h3>
<p>
    Information about <%= @user.name %> appears here.<br>
    <%= @user.about %>
</p>
<% if @current_user == @user %>
    <%= form_for(@user) do |f| %>
      <%= f.label :about %>
      <%= f.text_area(:about, cols: 20, rows: 17) %>
      <%= f.submit "Update Information", class: "btn btn-primary" %>
    <% end %>
    
    
    
<% end %>




