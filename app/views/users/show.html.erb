<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1 style="color:white;">
        <%= image_tag @user.avatar.url(:medium) , :class=> "img-circular-profile"  %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <body>
    <ul class="tab">
      <li><a href="javascript:void(0)" class="tablinks" onclick="openTab(event, 'Search')">Search</a></li>
      <li><a href="javascript:void(0)" class="tablinks" onclick="openTab(event, 'Playlists'), getPlaylist(document, 'script', 'deezer-widget-loader')">Playlists</a></li>
      <li><a href="javascript:void(0)" class="tablinks" onclick="openTab(event, 'About')">About</a></li>
      <li><a href="javascript:void(0)" class="tablinks" onclick="openTab(event, 'Followers')">Followers (<%= @user.followers.count %>)</a></li>
      <li><a href="javascript:void(0)" class="tablinks" onclick="openTab(event, 'Following')">Following (<%= @user.following.count %>)</a></li>
      <li><a href="javascript:void(0)" class="tablinks" onclick="openTab(event, 'Microposts')">Comments (<%= @comments.count %>)</a></li>
      <li><button id="connectDeezer" style="width:150px; border-radius:10px;background-color:#6496c8;">Connect Deezer</button></li>
    </ul>
    <div id="Search" class="tabcontent">
      <%= render 'search' %>
    </div>
    <div id="Playlists" class="tabcontent">
      <%= render 'songs' %>
    </div>
    <div id="About" class="tabcontent">
      <%= render 'about' %>
    </div>
    <div id="Followers" class="tabcontent">
      <%= render 'followers' %>
    </div>
    <div id="Following" class="tabcontent">
      <%= render 'following' %>
    </div>
    <div id="Microposts" class="tabcontent">
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
      <%= render 'microposts' %>
    </div>
    </body>
  </div>
</div>

<script type="text/javascript">
  $("#connectDeezer").click(function(){

      window.open("http://www.deezer.com/");

    });
</script>
